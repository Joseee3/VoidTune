<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:background="#121212">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/voidtune"/>

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/logo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="Inicia sesión en VoidTune"
                        android:textColor="#ffffff"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/googleButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_below="@id/title"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/button_border"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Continuar con Google"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>

                    <Button
                        android:id="@+id/facebookButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_below="@id/googleButton"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_border"
                        android:text="Continuar con Facebook"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:padding="10dp"/>

                    <Button
                        android:id="@+id/appleButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_below="@id/facebookButton"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_border"
                        android:text="Continuar con Apple"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:padding="10dp"/>

                    <Button
                        android:id="@+id/phoneButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_below="@id/appleButton"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_border"
                        android:text="Continuar con número de teléfono"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:padding="10dp"/>

                    <TextView
                        android:id="@+id/emailLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phoneButton"
                        android:layout_marginTop="30dp"
                        android:text="Correo electrónico o nombre de usuario"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/emailLabel"
                        android:layout_marginTop="10dp"
                        android:hint="Correo electrónico o nombre de usuario"
                        android:inputType="textEmailAddress"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:background="@drawable/edit_text_style"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/passwordLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/email"
                        android:layout_marginTop="30dp"
                        android:text="Contraseña"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/passwordLabel"
                        android:layout_marginTop="10dp"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:background="@drawable/edit_text_style"
                        android:padding="10dp" />

                    <Button
                        android:id="@+id/loginButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/password"
                        android:layout_marginTop="20dp"
                        android:text="Iniciar sesión"
                        android:backgroundTint="#1DB954"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:padding="10dp"/>

                    <TextView
                        android:id="@+id/forgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/loginButton"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="¿Se te ha olvidado la contraseña?"
                        android:textColor="#1DB954"
                        android:textSize="16sp" />

                </RelativeLayout>